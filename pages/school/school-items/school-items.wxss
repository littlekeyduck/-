.container1 {
  display: flex;
  flex-direction: column;
  width: 94%;
  background-color: white;
  border-radius: 4px;
  margin: 0 3%;
}

.top-image {
  width: 100%;
  height: 180px;
  margin-top: 10rpx;
}

.title {
  font-size: 33rpx;
  line-height: 70rpx;
  text-align: justify;
  margin-top: 30rpx;
  margin-left: 30rpx;
  color: #888888;
}
.desc{
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: justify;
  margin: 0 30rpx;
  letter-spacing: 0rpx;
  color: #8f8f8f;
}

.title1 {
  font-size: 30rpx;
  line-height: 70rpx;
  text-align: justify;
  margin-top: 10rpx;
}
.border{
  border-left: 1px solid black;
  border-right: 1px solid black;
  border-bottom: 1px solid black;
}
.content {
  font-size: 32rpx;
  text-align: justify;
  letter-spacing: 2rpx;
  line-height: 50rpx;
  margin-bottom: 45px;
}
.xiangqing-top{
  margin: 25rpx 0rpx;
}
.content image {
  width: 100%;
  height: 300rpx;
  margin: 15px 0;
}

.button{
  height: 80rpx;
  width: 100%;
  position: fixed;
  bottom:0; 
  background-color: #00193e;
  color: white;
  font-size: 28rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: center;
}